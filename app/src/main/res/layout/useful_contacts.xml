<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

<RelativeLayout
    android:padding="@dimen/margin_padding_small"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_xxnormal"
        android:padding="@dimen/margin_padding_normal"
        android:paddingLeft="0dp"
        android:paddingStart="0dp"
        android:id="@+id/uni_center"
        android:textStyle="bold"
        android:text="@string/uni_health_center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/uni_center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="@dimen/margin_padding_small"
        android:paddingBottom="@dimen/margin_padding_small"
        android:paddingRight="@dimen/margin_padding_tiny"
        android:paddingEnd="@dimen/margin_padding_small"
        android:paddingLeft="0dp"
        android:text="Address: "
        android:paddingStart="0dp"
        android:id="@+id/address"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/address"
        android:layout_toEndOf="@+id/address"
        android:layout_alignTop="@+id/address"
        android:textSize="@dimen/text_size_normal"
        android:paddingTop="@dimen/margin_padding_small"
        android:paddingBottom="@dimen/margin_padding_small"
        android:paddingRight="@dimen/margin_padding_small"
        android:paddingEnd="@dimen/margin_padding_small"
        android:paddingLeft="0dp"
        android:paddingStart="0dp"
        android:text="Link to site"
        android:id="@+id/address_content"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="@dimen/margin_padding_small"
        android:paddingBottom="@dimen/margin_padding_small"
        android:paddingRight="@dimen/margin_padding_tiny"
        android:paddingEnd="@dimen/margin_padding_small"
        android:paddingLeft="0dp"
        android:text="Tel: "
        android:paddingStart="0dp"
        android:id="@+id/tel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/tel"
        android:layout_toEndOf="@+id/tel"
        android:layout_alignBottom="@+id/tel"
        android:textSize="@dimen/text_size_normal"
        android:paddingTop="@dimen/margin_padding_small"
        android:paddingBottom="@dimen/margin_padding_small"
        android:paddingRight="@dimen/margin_padding_small"
        android:paddingEnd="@dimen/margin_padding_small"
        android:paddingLeft="0dp"
        android:paddingStart="0dp"
        android:text="Link to site"
        android:id="@+id/tel_content"
        android:textStyle="bold"/>


</RelativeLayout>

    </ScrollView>